<section class="gradient-custom">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="card shadow-2-strong card-registration" style="border-radius: 20px;">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Update User Details</h3>
            <form action="/update-profile" method="post" enctype="multipart/form-data">
              <div class="row">
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                    <label class="form-label" for="firstName">Name</label>
                    <input type="text" id="fullName" class="form-control form-control-lg" name="fname" value="{{customer.full_name}}" required>
                    
                  </div>

                </div>
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                    <label class="form-label" for="email">Email</label>
                    <input type="email" id="email" class="form-control form-control-lg " name="email" value="{{customer.email}}" required>
                    
                  </div>

                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4 d-flex align-items-center">

                  <div class="form-outline datepicker w-100">
                    <label for="birthdayDate" class="form-label">Birthday</label>
                    <input type="date" class="form-control form-control-lg "name="dob" id="birthdayDate" max="2001-01-01" value="{{date}}">
                    
                  </div>

                </div>
                <div class="col-md-6 mb-4">

                  <div class="form-group">
                    <label for="">Gender</label>
                  <select class="custom-select custom-select-lg is-valid" name="gender" required>
                    <option value="{{customer.gender}}">{{customer.gender}}</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    
                  </select>
                  
                </div>

                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4 pb-2">

                  <div class="form-outline">
                    <label class="form-label" for="phoneNumber">Phone Number</label>
                    <input type="tel" id="phoneNumber" class="form-control form-control-lg " name="phone" value="{{customer.phone}}" required>
                    
                  </div>

                </div>

                <div class="col-md-6 mb-4 pb-2">

                  <div class="form-outline">
                    <label class="form-label" for="address">Address</label>
                    <input type="text" id="address" class="form-control form-control-lg " name="address" value="{{customer.address}}" required>
                    
                  </div>

                </div>
                
              </div>
             

              <div class="row">
                <div class="col-md-6 mb-4 pb-2">

                   <div class="form-outline">
                    <label for="exampleFormControlFile1">Image</label>
                    {{!-- <img src="/user-images/{{customer.full_name}}{{customer.user_id}}.jpg" id="imgview" alt="" height="100px" width="150px" class="p-3"> --}}
                    <input type="file" class="form-control-file" accept="image/*;capture=camera"  id="exampleFormControlFile1" name="image" onchange="viewImg(event)">
                  </div>
                  

                </div>

                <div class="col-md-6 mb-4 pb-2">

                   <div class="form-outline">
                    
                    <img src="/user-images/{{customer.full_name}}{{customer.user_id}}.jpg" id="imgview" alt="" height="150px" width="150px" class="p-3">
                    
                  </div>
                  

                </div>
                
              </div>


              <div class="mt-4 pt-2">
                <input class="btn btn-primary btn-sm" style="width:100%; border-radius: 20px;" type="submit" value="Save Changes" />
              </div>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
   

.card-registration .select-input.form-control[readonly]:not([disabled]) {
font-size: 1rem;
line-height: 2.15;
padding-left: .75em;
padding-right: .75em;
}
.card-registration .select-arrow {
top: 13px;
}

</style>

  <script>
    function viewImg(event){
        document.getElementById('imgview').src=URL.createObjectURL(event.target.files[0])
    }
</script>
