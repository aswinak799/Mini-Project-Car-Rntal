<style>
  .card-title{
      font-weight: 700;
      text-decoration: none;
      cursor: pointer;
  }
</style>
<div class="container p-3">
    <div><a href="/add-document"class="btn btn-outline-success">add Document</a></div>
    <div class="row">
    {{#each docs}}
    
    <div class="card col-md-3 mt-5 ml-3">
