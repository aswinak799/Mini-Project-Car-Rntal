<style>
    .span{
        font-size: 25px;
        font-weight: 700;
        color: rgb(112, 111, 112);
        cursor: pointer;

    }
    h3{
        font-size: 30px;
        font-weight: 700;
        color: rgb(61, 137, 181);
        cursor: pointer;
    }
   h1{
        font-size: 40px;
        font-weight: 800;
        color: rgb(61, 137, 181);
        cursor: pointer;

   }
</style>
<h1 class="text-center">Select Driver</h1>
<div class="row p-5">
        {{#each drivers}}
        {{#if (eq this.status "Available")}}
             <div class="col-md-3 p-3">
            <div class="card col-md-12 mr-2 mt-3 p-2" style="border-radius: 25px;" >
              <img src="/driver-images/{{this.name}}{{this.driver_id}}.jpg"  style="width:100%; height:250px; border-radius: 25px;">
  
  
              <div class="card-body">
                <div><h3 class="card-title">{{this.name}}</h3></div>
                
                </div>
                <hr>
                
                
                <div class="col-12">
                    <span class="span"><img src="/images/email.png" style="height: 30px; width: 30px;"> {{this.email}}</span>
                </div>
                <div class="col-12">
                    <span class="span"><img src="/images/mobile-phone.png" style="height: 30px; width: 30px;"> {{this.phone}}</span>
                </div>
                
                <hr>
                <div class="row p-3">
                <div class="col-md"><a id="amt" href="tel:{{this.phone}}"><img src="/images/phone.png" style="height: 70px; width: 70px;" alt=""></a></div>
                <div class="col-md">
                    <a href="https://api.whatsapp.com/send?phone={{this.phone}}"><img src="/images/whatsapp.png" style="height: 70px; width: 70px;" alt=""></a>

                </div>
                
                <div class="col-md"> 
                    <a href="/checkout-with-driver/{{this.driver_id}}"class="btn btn-info btn-lg float-right mt-2">Select</a>
                    
                   
                </div>
                </div>
              </div>
              
            </div>
             
                    {{/if}}
            {{/each}}
</div>
