                <div><h1 >{{customer.full_name}}</h1></div>
                
                </div>
                <hr>
                
                
                <div class="col-12">
                    <span class="span"><img src="/images/email.png" style="height: 30px; width: 30px;"> {{customer.email}}</span>
                </div>
                <div class="col-12 mt-3">
                    <span class="span"><img src="/images/mobile-phone.png" style="height: 30px; width: 30px;"> {{customer.phone}}</span>
                </div>
                
                <hr>
                <div class="row p-3">
                   
                <div class="col-md" style="text-align: end;"><a id="amt" href="tel:{{customer.phone}}"><img src="/images/phone.png" style="height: 70px; width: 70px;" alt=""></a></div>
                <div class="col-md">
