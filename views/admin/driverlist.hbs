<style type="text/css">
		body
		{
		    counter-reset: Serial;          
		}

		tr td:first-child:before
		{
		  counter-increment: Serial;      
		  content: counter(Serial); 
		}
    .btn{
      border-radius: 15px;
    }
	</style>
<section>
    <div class="container">
        <h1 class="text-center">Driver List</h1>

        <div class="row p-3">
            
        </div>
<div class="mt-3 col-md-12">
        <div class="col-12">
        <div class="card recent-sales overflow-auto">

          {{! <div class="filter">
                  <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                  <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                    <li class="dropdown-header text-start">
                      <h6>Filter</h6>
                    </li>

                    <li><a class="dropdown-item" href="#">Today</a></li>
                    <li><a class="dropdown-item" href="#">This Month</a></li>
                    <li><a class="dropdown-item" href="#">This Year</a></li>
                  </ul>
                </div> }}

          <div class="card-body">
            <a href="/admin/add-driver" class="btn btn-success ml-auto mt-3" >Add Driver</a>
            <h5 class="card-title">Driver details <span>| All</span></h5>
            <table class="table-borderless mt-5" id="productstable">
  <thead>
    <tr>
      
      <th scope="col">slno</th>
      <th scope="col">name</th>
      <th scope="col">gender</th>
      <th scope="col">Experience</th>
      <th scope="col">Phone</th>
      <th scope="col">Status</th>
      <th scope="col">option</th>
    </tr>
  </thead>
  <tbody>
    {{#each drivers}}
    <tr>
      <td></td>
      <td>{{this.name}}</td>
      <td>{{this.gender}}</td>
      <td>{{this.exp}}</td>
      <td>{{this.phone}}</td>
      
      
   
      <td>
        <div class="btn-group">
          {{#if (eq this.status "Available") }}
  <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    {{this.status}}
  </button>
  {{else}}
  <button type="button" class="btn btn-danger btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    {{this.status}}
  </button>
  {{/if}}

  <div class="dropdown-menu">
    {{#if (eq this.status "Available") }}
    <a class="dropdown-item" href="/admin/driver-status/?status=Not available&Id={{this.driver_id}}">Not available</a>
    <a class="dropdown-item" href="/admin/driver-status/?status=Disabled&Id={{this.driver_id}}">Disable</a>
    {{else}}
    <a class="dropdown-item" href="/admin/driver-status/?status=Available&Id={{this.driver_id}}">Available</a>
    <a class="dropdown-item" href="/admin/driver-status/?status=Disabled&Id={{this.driver_id}}">Disable</a>
    {{/if}}

  </div>
</div></td>
      {{!-- <td><img src="/car-images/{{this.reg_no}}{{this.car_id}}.jpg" alt="" width="50px" height="50px"> </td> --}}
      <td>
        <a href="/admin/view-driver/{{this.driver_id}}" class="btn btn-outline-info btn-sm" style="width: 100px; border-radius: 16px;">View</a>
        {{!-- <a href="/admin/delete-car/{{this.car_id}}" class="btn btn-danger btn-sm" onclick="return confirm('Are you want to delete {{this.Name}} ?')">Delete</a> --}}
          
      </td>
    </tr>
   
    {{/each}}
    
  </tbody>
</table>
          </div>

        </div>
      </div>
</div>
    </div>
     
</section>
<script>
  $(document).ready( function () {
    $('#productstable').DataTable();
} );
</script>