

<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Add Car</h3>
            <form action="/admin/add-car" method="post" enctype="multipart/form-data">
            {{#if car_err}}
        <div class="alert alert-danger" role="alert">
        Register number already exist
      </div>
    {{/if}}
              <div class="row">
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                    <label class="form-label" for="brand">Brand Name</label>
                    <input type="text" id="brand" class="form-control form-control-lg" name="brand" required>
                    
                  </div>

                </div>
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                    <label class="form-label" for="model">Model Name</label>
                    <input type="text" id="model" class="form-control form-control-lg" name="model" required>
                    
                  </div>

                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4 d-flex align-items-center">

                  <div class="form-outline w-100">
                    <label for="reg" class="form-label">Register No</label>
                    <input type="text" class="form-control form-control-lg" id="reg" name="register_no" title="KL 11 K 1111" required pattern="^[A-Z]{2}\s[0-9]{1,2}\s[A-Z]{1,2}\s[0-9]{3,4}$">
                    
                  </div>

                </div>
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                    <label class="form-label" for="amt">Amount</label>
                    <input type="number" id="amt" class="form-control form-control-lg" name="amount" required>
                    
                  </div>

                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4">

                  <div class="form-group">
                    <label for="fuel">Fuel Type</label>
                  <select class="custom-select custom-select-lg" id="fuel" name="fuel" required>
                    <option value="">Select fuel type</option>
                    <option value="Diesel">Diesel</option>
                    <option value="Petrol">Petrol</option>
                    <option value="Electric">Electric</option>
                    
                  </select>
                </div>
                </div>

                <div class="col-md-6 mb-4 pb-2">

                  <div class="form-outline">
                    <label class="form-label" for="kms">Total kilometers</label>
                    <input type="number" id="kms" class="form-control form-control-lg " name="kms"required>
                    
                  </div>

                </div>
                
              </div>
              <div class="row">
                <div class="col-md-6 mb-4 pb-2">

                  <div class="form-outline">
                    <label class="type" for="Segment">Segment</label>
                    <select class="custom-select custom-select-lg" id="Segment" name="segment" required>
                    <option value="">Select segment</option>
                    <option value="Hatchback">Hatchback</option>
                    <option value="Sedan">Sedan</option>
                    <option value="SUV">SUV</option>
                    <option value="MUV">MUV</option>
                    <option value="Luxury">Luxury</option>
                    
                  </select>
                    
                    
                  </div>

                </div>
                <div class="col-md-6 mb-4 pb-2">

                   <div class="form-outline">
                    <label for="seat">Seats</label>
                    <input type="number" class="form-control form-control-lg" id="seat" name="seat" required>
                  </div>

                </div>
              </div>
              <div class="row">
                <div class="col-md-6 mb-4 pb-2">

                  <div class="form-outline">
                    <label class="type" for="Trans">Transmission</label>
                    <select class="custom-select custom-select-lg" id="Trans" name="transmission" required>
                    <option value="">Select Transmission</option>
                    <option value="Automatic">Automatic</option>
                    <option value="Manual">Manual</option>
                    
                  </select>
                    
                    
                  </div>

                </div>
                <div class="col-md-6 mb-4 pb-2">

                   <div class="form-group">
                    <label for="img">Image</label>
                    <input type="file" class="form-control-file" id="img" name="image" required>
                  </div>

                </div>
              </div>

             


              <div class="mt-2 pt-2">
                <input class="btn btn-primary btn-lg" type="submit" value="Add" />
              </div>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

