

<section class=" gradient-custom">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Update car</h3>
            <form action="/admin/edit-car" method="post" enctype="multipart/form-data">
            
              <div class="row">
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                    <label class="form-label" for="firstName">Brand Name</label> 
                    <input type="text" id="brand" class="form-control form-control-lg" name="brand" value="{{car.brand}}" disabled/>
                    
                  </div>

                </div>
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                    <label class="form-label" for="">Model Name</label>
                    <input type="text" id="model" class="form-control form-control-lg" name="model" value="{{car.model}}" disabled/>
                    
                  </div>

                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4 d-flex align-items-center">

                  <div class="form-outline w-100">
                    <label for="" class="form-label">Register No</label>
                    <input type="text" class="form-control form-control-lg" id="reg" name="register_no" value="{{car.reg_no}}" disabled/>
                    <input type="text" class="form-control form-control-lg" id="reg" name="register_no" value="{{car.reg_no}}" hidden/>
                    <input type="number" class="form-control form-control-lg" id="id" name="carId" value="{{car.car_id}}" hidden/>
                  </div>

                </div>
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                    <label class="form-label" for="">amount</label>
                    <input type="number" id="amt" class="form-control form-control-lg" name="amount" value="{{car.amount}}"/>
                    
                  </div>

                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4 pb-2">

                  <div class="form-outline">
                    <label class="form-label" for="">Fuel Type</label>
                    <input type="text" id="fuel" class="form-control form-control-lg" name="fuel" value="{{car.fuel}}" disabled/>
                    
                  </div>

                </div>

                <div class="col-md-6 mb-4 pb-2">

                  <div class="form-outline">
                    <label class="form-label" for="address">Total kilometers</label>
                    <input type="number" id="kms" class="form-control form-control-lg" name="kms" value="{{car.kms}}"/>
                    
                  </div>

                </div>
                
              </div>
              <div class="row">
                <div class="col-md-6 mb-4 pb-2">

                  <div class="form-outline">
                    <label class="form-label" for="address">Segment</label>
                    <input type="text" id="type" class="form-control form-control-lg" name="type" value="{{car.segment}}" disabled/>
                    
                  </div>

                </div>
                <div class="col-md-6 mb-4 pb-2">

                  <div class="form-outline">
                    <label class="form-label" for="address">Transmission</label>
                    <input type="text" id="type" class="form-control form-control-lg" name="transmission" value="{{car.transmission}}" disabled/>
                    
                  </div>

                </div>
                

              </div>
              <div class="row">
                <div class="col-md-6 mb-4 pb-2">


                   <div class="form-group">
                    <label for="exampleFormControlFile1">Image</label>
                    <input type="file" class="form-control-file" id="img" name="image" onchange="viewImg(event)">
                  </div>

                </div>
                <div class="col-md-6 mb-4 pb-2">

                   <div class="form-outline">
                    
                    <img src="/car-images/{{car.reg_no}}{{car.car_id}}.jpg" id="imgview" alt="" height="150px" width="150px" class="p-3">
                    
                  </div>
                  

                </div>
              </div>

             


              <div class="mt-2 pt-2">
                <input class="btn btn-primary btn-lg" type="submit" value="Update" />
              </div>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
 <script>
    function viewImg(event){
        document.getElementById('imgview').src=URL.createObjectURL(event.target.files[0])
    }
</script>

<style>
    .btn-lg{
        width: 100%;
    }

.card-registration .select-input.form-control[readonly]:not([disabled]) {
font-size: 1rem;
line-height: 2.15;
padding-left: .75em;
padding-right: .75em;
}
.card-registration .select-arrow {
top: 13px;
}

</style>