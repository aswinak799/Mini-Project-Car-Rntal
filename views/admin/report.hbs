      <script>
        
        $(function(){
          //tomorrow.setDate(today.getDate() + 1)
          var dtToday = new Date();
          dtToday.setDate(dtToday.getDate() - 30)
    var month = dtToday.getMonth() + 1;
    var day = dtToday.getDate();
    day = day;
    var year = dtToday.getFullYear();
          
    
    if(month < 10)
        month = '0' + month.toString();
    if(day < 10)
        day = '0' + day.toString();
    
    var maxDate = year + '-' + month + '-' + day;

    // or instead:
    // var maxDate = dtToday.toISOString().substr(0, 10);

    $('#picup').attr('max', maxDate);
});


document.getElementById("dropoff").disabled = true;

function enebleDate(){
//  const x = document.getElementById("picup").value;
  document.getElementById("dropoff").disabled = false;
  var dt = new Date();
 // dt.setDate(dt.getDate() + 1)

  var month = dt.getMonth() + 1;
    var day = dt.getDate();
    day = day;
    var year = dt.getFullYear();


    if(month < 10)
        month = '0' + month.toString();
    if(day < 10)
        day = '0' + day.toString();
    
    var maxDate = year + '-' + month + '-' + day;

    // or instead:
    // var maxDate = dtToday.toISOString().substr(0, 10);

    $('#dropoff').attr('max', maxDate);

}
      </script>

      